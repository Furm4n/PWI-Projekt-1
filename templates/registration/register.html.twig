{% extends 'base.html.twig' %}

{% block body %}
    {% if flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">Wprowadzono niepoprawne dane.</div>
    {% endif %}
    <form>
        {{ form_start(registrationForm) }}
        <fieldset>
            <legend>Zarejestruj się</legend>
            <div class="form-group">
                <label for="exampleInputEmail1">Nazwa użytkownika</label>
                {{ form_row(registrationForm.username, {
                    label: ''
                }) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Hasło</label>
                {{ form_row(registrationForm.plainPassword, {
                    label: ''
                }) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Zaakceptuj regulamin</label>
                {{ form_row(registrationForm.agreeTerms, {
                    label: ''
                }) }}
            </div>
        </fieldset>
        <button type="submit" class="btn">Zarejestruj się</button>
        {{ form_end(registrationForm) }}
    </form>
{% endblock %}
